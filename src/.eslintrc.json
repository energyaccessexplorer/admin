{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": "off",
		"semi": ["error", "always"],
		"no-cond-assign": "off",
		"no-console": "off",
		"no-extra-semi": "off",
		"no-useless-escape": "off",
		"no-mixed-spaces-and-tabs":  ["error", "smart-tabs"],
		"no-prototype-builtins": "off",
		"no-unused-vars": ["warn", {
			"varsIgnorePattern": "^_$",
			"argsIgnorePattern": "^_$"
		}]

	},
	"globals": {
		"dt": "readonly",

		"email_user": "readonly",
		"external_link_base": "readonly",

		"fake_blob_download": "readonly",
		"modal": "readonly",
		"maybe": "readonly",
		"or": "readonly",
		"and": "readonly",
		"ce": "readonly",
		"qs": "readonly",
		"qsa": "readonly",
		"remote_tmpl": "readonly",
		"pgrest": "readonly",
		"until": "readonly",
		"uuid": "readonly",
		"jwt_decode": "readonly"
	}
}
